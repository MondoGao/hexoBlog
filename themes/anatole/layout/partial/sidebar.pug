.sidebar.animated.fadeInDown
  .logo-title
    .title
      //- img(src=gravatar(config.email),style="width:127px;")
      h3(title="")
        a(href="/")= config.title
      if theme.description
        .description
          p= theme.description

  ul.social-links
    if theme.email
      li
        a(href=`mailto:${theme.email}?Subject=${__('emailSubject')}`)
          i.fa.fa-envelope
    if theme.weibo
      li
        a(href="http://weibo.com/" + theme.weibo)
          i.fa.fa-weibo
    if theme.twitter
      li
        a(href="https://twitter.com/" + theme.twitter)
          i.fa.fa-twitter
    if theme.rss
      li
        a(href= url_for(theme.rss))
          i.fa.fa-rss
    if theme.facebook
      li
        a(href="http://facebook.com/" + theme.facebook)
          i.fa.fa-facebook
    if theme.instagram
      li
        a(href="http://instagram.com/" + theme.instagram)
          i.fa.fa-instagram
    if theme.github
      li
        a(href="http://github.com/" + theme.github)
          i.fa.fa-github
  include footer
